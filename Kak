-- LocalScript inside ScreenGui

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Defaults
local defaultSpeed = 16
local boostedSpeed = 200

local defaultJump = 50
local boostedJump = 200

-- Create the GUI
local screenGui = script.Parent

-- Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 180)
frame.Position = UDim2.new(0.5, -150, 0.5, -90)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

-- UI Corner
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 8)
corner.Parent = frame

-- Title Label
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Universal Speed/Jump Power"
title.TextColor3 = Color3.new(1, 1, 1)
title.TextScaled = true
title.Font = Enum.Font.SourceSansBold
title.Parent = frame

-- Speed Button
local speedBtn = Instance.new("TextButton")
speedBtn.Size = UDim2.new(0.8, 0, 0, 40)
speedBtn.Position = UDim2.new(0.1, 0, 0, 50)
speedBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
speedBtn.Text = "Speed: OFF"
speedBtn.TextColor3 = Color3.new(1, 1, 1)
speedBtn.TextScaled = true
speedBtn.Font = Enum.Font.SourceSansBold
speedBtn.Parent = frame

local speedCorner = Instance.new("UICorner")
speedCorner.CornerRadius = UDim.new(0, 6)
speedCorner.Parent = speedBtn

-- JumpPower Button
local jumpBtn = Instance.new("TextButton")
jumpBtn.Size = UDim2.new(0.8, 0, 0, 40)
jumpBtn.Position = UDim2.new(0.1, 0, 0, 110)
jumpBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
jumpBtn.Text = "JumpPower: OFF"
jumpBtn.TextColor3 = Color3.new(1, 1, 1)
jumpBtn.TextScaled = true
jumpBtn.Font = Enum.Font.SourceSansBold
jumpBtn.Parent = frame

local jumpCorner = Instance.new("UICorner")
jumpCorner.CornerRadius = UDim.new(0, 6)
jumpCorner.Parent = jumpBtn

-- Toggle Logic
local speedOn = false
local jumpOn = false

speedBtn.MouseButton1Click:Connect(function()
	speedOn = not speedOn
	if speedOn then
		humanoid.WalkSpeed = boostedSpeed
		speedBtn.Text = "Speed: ON"
	else
		humanoid.WalkSpeed = defaultSpeed
		speedBtn.Text = "Speed: OFF"
	end
end)

jumpBtn.MouseButton1Click:Connect(function()
	jumpOn = not jumpOn
	if jumpOn then
		humanoid.JumpPower = boostedJump
		jumpBtn.Text = "JumpPower: ON"
	else
		humanoid.JumpPower = defaultJump
		jumpBtn.Text = "JumpPower: OFF"
	end
end)
